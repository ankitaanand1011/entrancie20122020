<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_above="@+id/view1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rl_wel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_230sdp"
                android:background="@drawable/waves"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_20sdp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome\nBack"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_35sdp"

                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Entrancei"
                            android:drawableEnd="@drawable/yellow_circle"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_35sdp"

                            />
                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:src="@drawable/yellow_circle"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                tools:ignore="UselessParent">

                <RelativeLayout
                    android:id="@+id/rl_logo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/ivAppLogo"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/logo_n"
                        android:layout_alignParentStart="true"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Login"
                        android:layout_toEndOf="@+id/ivAppLogo"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:textSize="@dimen/_23sdp"
                        android:layout_centerVertical="true"

                        />

                    <TextView
                        android:id="@+id/signup_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SIGN UP"
                        android:onClick="onClick"

                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/white"
                        android:paddingRight="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_20sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:background="@drawable/signup_bg"

                        />

                </RelativeLayout>



                <LinearLayout
                    android:id="@+id/rl_1"
                    android:layout_below="@+id/rl_logo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                 
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"

                        android:background="@drawable/login_edt"
                        android:orientation="horizontal">

                        <com.rilixtech.widget.countrycodepicker.CountryCodePicker
                            android:id="@+id/ccp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"/>

                        <EditText
                            android:id="@+id/mobile_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:layout_toEndOf="@+id/ccp"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:singleLine="true"
                            android:hint="Enter mobile number"
                            android:inputType="phone"
                            android:textColor="@color/colorPrimaryDark"
                            />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/ll_gt_otp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/get_otp_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:padding="10dp"
                            android:text="Request for OTP"
                            android:onClick="onClick"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textSize="@dimen/_14sdp"
                            android:gravity="center"

                            android:background="@drawable/gradient_bg"
                            />


                        <LinearLayout
                            android:id="@+id/ll_otp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/otp_edt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryDark"
                                android:padding="10dp"
                                android:hint="Enter OTP"
                                android:textSize="16sp"
                                android:gravity="center"
                                android:singleLine="true"
                                android:layout_marginTop="20dp"
                                android:background="@drawable/login_edt"
                                android:inputType="textPassword"/>


                            <TextView
                                android:id="@+id/submit_otp_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:padding="10dp"
                                android:text="SUBMIT"
                                android:onClick="onClick"
                                android:textStyle="bold"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textSize="@dimen/_14sdp"
                                android:gravity="center"
                                android:background="@drawable/gradient_bg" />


                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical">
                        <EditText
                            android:id="@+id/password_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimaryDark"
                            android:padding="10dp"
                            android:hint="Enter password"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:singleLine="true"

                            android:layout_marginTop="20dp"
                            android:background="@drawable/login_edt"
                            android:inputType="textPassword"/>
                        <TextView
                            android:id="@+id/tv_forgot_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:onClick="onClick"

                            android:text="Forgot Password ?"
                            android:textSize="@dimen/_14sdp"
                            android:textColor="@color/colorPrimaryDark"


                            />


                        <TextView
                            android:id="@+id/submit_tv_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:padding="10dp"
                            android:text="SUBMIT"
                            android:onClick="onClick"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textSize="@dimen/_14sdp"
                            android:gravity="center"
                            android:background="@drawable/gradient_bg" />



                    </LinearLayout>








                </LinearLayout>



            </RelativeLayout>


        </LinearLayout>


    </ScrollView>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_border"
        android:layout_above="@+id/ll_bottom"/>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="OTP"
            android:gravity="center"
            android:onClick="onClick"
            android:background="@color/blue_gradient"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:padding="@dimen/_5sdp"

            />

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PASSWORD"
            android:gravity="center"
            android:onClick="onClick"
            android:textColor="@color/blue_gradient"
            android:textSize="@dimen/_15sdp"
            android:padding="@dimen/_5sdp"

            />


    </LinearLayout>




</RelativeLayout>