                            android:src="@mipmap/ic_notes"
                            android:layout_centerVertical="true"

                            />
                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>





    </LinearLayout>
