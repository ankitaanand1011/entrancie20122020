<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <include
        android:id="@+id/header"
        layout="@layout/header"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exam Name"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:padding="@dimen/_10sdp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/_5sdp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_15sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:drawableStart="@mipmap/correct"
                        android:drawablePadding="10dp"
                        android:text="Total Duration of this test is 30 minutes"
                        android:textSize="@dimen/_14sdp"
                        android:layout_marginBottom="@dimen/_10sdp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:drawableStart="@mipmap/correct"
                        android:drawablePadding="10dp"
                        android:text="Total questions for this test is 15."
                        android:textSize="@dimen/_14sdp"
                        android:layout_marginBottom="@dimen/_10sdp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:drawableStart="@mipmap/correct"
                        android:drawablePadding="10dp"
                        android:text="Each correct question will grant you 4 marks and total marks for test is 60."
                        android:textSize="@dimen/_14sdp"
                        android:layout_marginBottom="@dimen/_10sdp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:drawableStart="@mipmap/correct"
                        android:drawablePadding="10dp"
                        android:text="Each wrong question will grant you -1 marks and there is no negative marks for this test."
                        android:textSize="@dimen/_14sdp"
                        android:layout_marginBottom="@dimen/_10sdp"/>



                    <TextView
                        android:id="@+id/tv_start_test"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:text="Start Test"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/colorPrimary"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"/>



                </LinearLayout>






            </androidx.cardview.widget.CardView>



        </LinearLayout>
    </ScrollView>

</LinearLayout>